<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head', {title: 'Home'}) %>
    <link rel="stylesheet" href="/css/register.css">
</head>
<body>
    <header>
        <%- include('partials/header') %> 
    </header>
    <main>
        <div class="register_outer-edge">
            <div class="register_container container">
                <h2>Editar libro</h2>
                <div>
                    <% if (locals.errors) { %>
                        <p>Errors</p>
                        <% for (let error of errors) { %>
                            <p><%= error.msg %></p>
                        <% } %>
                    <% } %>
                </div>
                <div class="form_container">
                    <form action="/products/<%= product.id %>?_method=PUT" method="post">
                        <div class="form_outer-edge-input">
                            <div class="form_container-input">
                                <label for="name">Nombre:</label>
                                <input type="text" name="name" id="name" value="<%= product.name %> ">
                            </div>
                        </div>
                        <div class="form_outer-edge-input">
                            <div class="form_container-input">
                                <label for="author">Autor:</label>
                                <input type="text" name="author" id="author" value="<%= product.author %> ">
                            </div>
                        </div>
                        <div class="form_outer-edge-input">
                            <div class="form_container-input">
                                <label for="descritpion">Descripcion:</label>
                                <textarea name="description" id="description" cols="30" rows="10"><%= product.description %> </textarea>
                            </div>
                        </div>
                        <div class="form_outer-edge-input">
                            <div class="form_container-input">
                                <label for="price">Precio:</label>
                                <input type="text" name="price" id="price" value="<%= product.price %> ">
                            </div>
                        </div>
                        <div class="form_outer-edge-input">
                            <div class="form_container-input">
                                <label for="image">Imagen:</label>
                                <input type="file" name="image" id="image" value="<%= product.image %> ">
                            </div>
                        </div>
                        <div class="form_outer-edge-input">
                            <div class="form_container-input">
                                <label for="genre">Genero literario:</label>
                                <select name="genre" id="genre">
                                    <option value="Aventura">Aventura</option>
                                </select>
                            </div>
                        </div>
                        <div class="form_container-button">
                            <button class="button-regular" type="submit">Finalizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <%- include('partials/footer') %> 
    </footer>
</body>
</html>