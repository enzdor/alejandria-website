<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head', {title: 'Cesto'}) %>
    <link rel="stylesheet" href="/css/basket.css">
    <link rel="stylesheet" href="/css/products.css">
</head>
<body>
    <header>
        <%- include('partials/header') %> 
    </header>
    <main>
        <div class="products_container">
            <div class="title_outer-edge">
                <div class="title_container container">
                    <h2>Libros en tu cesto</h2>
                </div>
            </div>
            <% for (let i = 0; i < 4; i++) {%> 
                <div class="products_outer-edge-product">
                    <div class="products_container-product container">
                        <div class="products-product_container-image">
                            <a href="/products/<%= products[i].id %>">
                                <img src="/images/<%= products[i].image %> " alt="" width="100%">
                            </a>
                        </div>
                        <div class="products-product_container-description">
                            <p><%= products[i].price %></p>
                        </div>
                        <div class="product_container-button">
                            <div>
                                <form action="">
                                    <div>
                                        <button class="button-regular">Borrar</button>
                                    </div>
                                </form>
                            </div>
                            <div>
                                <form action="">
                                    <div>
                                        <button class="button-regular">Favorito</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %> 
            <div class="basket_outer-edge-price">
                <div class="basket_container-price container">
                    <h3>Total a pagar: 2000$</h3>
                    <% for (let product of productsPopular) {%> 
                    <div class="basket-price_container-product">
                        <p class="basket-price_product-name"><%= product.name %> </p>
                        <p class="basket-price_product-price"><%= product.price %> </p>
                    </div>
                    <% } %> 
                    <div class="basket-price_container-form">
                        <form action="">
                            <div>
                                <button class="button-regular">Vaciar</button>
                            </div>
                        </form>
                        <form action="">
                            <div>
                                <button class="button-regular">Pagar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <%- include('partials/footer') %> 
    </footer>
</body>
</html>
